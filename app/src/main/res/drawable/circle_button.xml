<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#FFFFFF"
                android:width="2dp" />
        </shape>
    </item>

    <!-- Middle Circle -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#FFFFFF"
                android:width="2dp" />
        </shape>
    </item>

    <!-- Inner Circle (Button) -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FFE569"
                android:endColor="#FFDE00"
                android:angle="45" />
        </shape>
    </item>

</layer-list>
