<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#FFFFFF"
                android:width="2dp" />
        </shape>
    </item>

    <!-- Middle Circle -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#FFFFFF"
                android:width="2dp" />
        </shape>
    </item>

    <!-- Inner Circle (Button) -->
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#9681EB"
                android:endColor="#6527BE"
                android:angle="45" />
        </shape>
    </item>

</layer-list>
