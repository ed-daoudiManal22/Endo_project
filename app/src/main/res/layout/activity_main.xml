<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Start Your HealthCare Journey Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startJourneyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:paddingStart="28dp"
        android:paddingTop="15dp"
        android:paddingEnd="28dp"
        android:paddingBottom="15dp"
        android:text="Get Started with EndoAware"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Image at the Top -->


    <!-- Welcome To EndoAware Message -->

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:scaleType="centerCrop"
        android:src="@drawable/endomet" />

    <!-- Circular Button with Icon -->


    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="267dp"
        android:text="Welcome To EndoAware"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/circularButton"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/baseline_navigate_next_24"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="31dp"
        android:text="..." />


</RelativeLayout>
