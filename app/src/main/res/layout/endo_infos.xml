<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Endo_InfoActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/leftIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_back_black"
                android:contentDescription="Menu Icon"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/currentDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endo Aware"
                android:textColor="#393E46"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/leftIcon"
                android:layout_toStartOf="@+id/notificationIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/notificationsicon"
                android:contentDescription="Notification Icon"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Box 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/EndoFAQ"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/faq_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Endometriosis FAQ"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Box 2 -->
            <androidx.cardview.widget.CardView
            android:id="@+id/article1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:clickable="true"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/endo_adolescence" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="@color/light_grey"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Endométriose et Adolescence"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Comprendre l'endométriose pour les 15/25 ans
Un document réalisé en partenariat avec l'ARS des Hauts de France"
                android:textColor="@color/white"
                android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="Read... "
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="end" />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Box 3 -->
            <androidx.cardview.widget.CardView
            android:id="@+id/article2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:clickable="true"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="@color/light_grey">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Article 2"
            android:gravity="center"
            android:textColor="@color/white" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>