<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Period Tracking"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lastPeriodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Period"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/headingTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/lastPeriodDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January 1, 2023"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/lastPeriodLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trackPeriodButton"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_style"
        android:text="Track Period"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/averageCycleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Cycle Length"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/lastPeriodDate"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/averageCycleLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 days"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/averageCycleLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/nextPeriodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Period"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/averageCycleLength"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/nextPeriodDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January 29, 2023"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/nextPeriodLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextPeriodDate"
        android:layout_marginTop="16dp" />

    <!-- Additional elements for period tracking -->

    <TextView
        android:id="@+id/periodDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period Duration"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/calendarView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/periodDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 days"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/periodDurationLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/nextOvulationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Ovulation"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/periodDuration"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/nextOvulationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="February 5, 2023"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/nextOvulationLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

</RelativeLayout>
