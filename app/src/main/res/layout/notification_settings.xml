<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context=".NotifiactionSettings_Activity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/leftIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/backward_icon"
                android:contentDescription="Menu Icon"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification settings"
                android:textColor="#393E46"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/leftIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:padding="15dp">

        <!-- Switch for "Take diagnostic test (once a month)" -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/DiagTestSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take diagnostic test (once a month)"
            android:layout_marginVertical="10dp"/>

        <!-- Switch for "Community notifications" -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/communityNotifiSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community notifications" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/oneMinut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test notifications"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>
</RelativeLayout>