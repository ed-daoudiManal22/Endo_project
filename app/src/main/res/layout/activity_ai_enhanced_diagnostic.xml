<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:padding="4dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Enhanced Diagnostic Results"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color" />

        </RelativeLayout>

        <!-- Diagnostic Test Results Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diagnostic Test Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkgrey"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score: "
                        android:textSize="16sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/diagnosticScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/50"
                        android:textSize="16sp"
                        android:textColor="@color/gray" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/diagnosticRiskText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEDIUM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange1"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/light_background"
                        android:padding="8dp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/diagnosticProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="50"
                    android:progressTint="@color/orange1"
                    android:progressBackgroundTint="@color/light_gray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- AI Analysis Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/aiAnalysisCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analysis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkgrey"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- AI Risk Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Risk Score"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/aiRiskScoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="72%"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color" />

                        <ProgressBar
                            android:id="@+id/aiRiskProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="60dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="4dp"
                            android:progress="72"
                            android:progressTint="@color/primary_color"
                            android:progressBackgroundTint="@color/light_gray" />

                    </LinearLayout>

                    <!-- AI Risk Level -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Risk Level"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/aiRiskLevelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MODERATE"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange1" />

                    </LinearLayout>

                    <!-- AI Confidence -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confidence"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/aiConfidenceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/green" />

                        <ProgressBar
                            android:id="@+id/aiConfidenceProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="60dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="4dp"
                            android:progress="85"
                            android:progressTint="@color/green"
                            android:progressBackgroundTint="@color/light_gray" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Combined Assessment Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/combinedAssessmentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Combined Assessment"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkgrey" />

                    <TextView
                        android:id="@+id/combinedRiskText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODERATE"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange1"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/light_background"
                        android:padding="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Combined Score: "
                        android:textSize="16sp"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/combinedScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="68%"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color" />

                </LinearLayout>

                <TextView
                    android:id="@+id/combinedRecommendationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Moderate Risk Assessment: Consider scheduling healthcare consultation and monitoring symptoms closely."
                    android:textSize="14sp"
                    android:textColor="@color/darkgrey"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recommendations Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkgrey"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendationsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- AI Explanation Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Explanation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkgrey" />

                    <Button
                        android:id="@+id/showDetailsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Show Details"
                        android:textSize="12sp"
                        android:background="@drawable/button_outline"
                        android:textColor="@color/primary_color"
                        android:minHeight="0dp"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/xaiExplanationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap 'Show Details' to see how the AI made this assessment..."
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/featureImportanceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/exportReportButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“„ Export PDF Report"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/backToHomeButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ  Back to Home"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:background="@drawable/button_outline"
                android:textStyle="bold"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
