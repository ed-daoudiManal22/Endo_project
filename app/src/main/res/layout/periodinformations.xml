<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="277dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Enter Period Information"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/periodDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period Date"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/headingTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/periodDateEditText"
        android:layout_width="378dp"
        android:layout_height="60dp"
        android:layout_below="@id/periodDateLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter period date"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/periodDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period Duration"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/periodDateEditText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/periodDurationEditText"
        android:layout_width="378dp"
        android:layout_height="59dp"
        android:layout_below="@id/periodDurationLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter period duration"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/averageCycleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Cycle Length"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/periodDurationEditText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/averageCycleEditText"
        android:layout_width="379dp"
        android:layout_height="62dp"
        android:layout_below="@id/averageCycleLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter average cycle length"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/fertilityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertility"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/averageCycleEditText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <Switch
        android:id="@+id/fertilitySwitch"
        android:layout_width="246dp"
        android:layout_height="66dp"
        android:layout_below="@id/fertilityLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Track fertility"
        android:textColor="@android:color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="215dp"
        android:layout_height="64dp"
        android:layout_below="@id/fertilitySwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:background="@drawable/button_style"
        android:text="Save"
        android:textColor="@android:color/white" />

</RelativeLayout>
